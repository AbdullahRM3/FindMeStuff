<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="250dp"

    app:cardBackgroundColor="#000"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardMaxElevation="14dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="195dp"
        android:orientation="vertical"

        >


        <!-- ImageVIew to display our Course Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:src="@drawable/user3" />

        <!-- Text View to display Course Name -->


        <TextView
            android:id="@+id/item_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/item_pic"
            android:fontFamily="@font/bungee"
            android:text="item_name"
            android:textColor="#ffde59"
            android:textSize="20sp" />

        <Button

            android:id="@+id/btn_Qr"
            android:layout_width="147dp"
            android:layout_height="60dp"
            android:layout_below="@id/item_Name"
            android:layout_marginStart="52dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="13dp"
            android:layout_toEndOf="@+id/btn_edit"
            android:backgroundTint="#ffde59"
            android:fontFamily="@font/bungee"
            android:text="qr generate"
            android:textColor="#000" />

        <Button

            android:id="@+id/btn_edit"
            android:layout_width="99dp"
            android:layout_height="60dp"
            android:layout_below="@id/item_pic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="-22dp"
            android:backgroundTint="#ffde59"
            android:fontFamily="@font/bungee"
            android:text="update"
            android:textColor="#000" />

        <Button

            android:id="@+id/btn_delete"
            android:layout_width="99dp"
            android:layout_height="60dp"
            android:layout_below="@id/btn_Qr"


            android:layout_marginStart="-100dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/btn_edit"
            android:backgroundTint="#ffde59"
            android:fontFamily="@font/bungee"
            android:text="Delete"
            android:textColor="#000" />

        <Button
            android:id="@+id/btn_lost"
            android:layout_width="147dp"
            android:layout_height="60dp"
            android:layout_below="@id/item_pic"
            android:layout_marginStart="-155dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/btn_Qr"
            android:backgroundTint="#ffde59"
            android:fontFamily="@font/bungee"
            android:text="item Lost"
            android:textColor="#000" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
