<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffde59"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="Lost Item"
        android:textColor="#fff"

        />


    <EditText
        android:id="@+id/Lost_Item_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="What do u want to show the other users"
        app:counterMaxLength="20"
        android:textColorHint="#000"

        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        android:textColor="#000"


        app:hintTextColor="#000"/>





    <EditText
        android:id="@+id/Lost_description"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="#000"
        app:hintTextColor="#000"
        android:backgroundTint="@color/white"
        android:gravity="top"
        android:hint="where was the item Lost??"
        android:inputType="textMultiLine"
        android:lines="6"
        android:background="@drawable/rounded"
        android:overScrollMode="always"

        android:textColor="#000"/>

    <Button
        android:id="@+id/btn_lost_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/black"
        android:text="item lost"
        android:textColor="#ffde59" />
</LinearLayout>